{
  "compilerOptions": {
    "outDir": "out",
    "target": "esnext",
    "lib": ["dom", "esnext"],
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "declarationDir": "types"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
